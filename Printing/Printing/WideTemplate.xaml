<Page x:Class="Printing.WideTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      Title="Page1" Margin="0"
      >

    <Grid Width="5in" Height="7in" Margin="0">
        <Canvas Width="5in" Height="7in">
            <FixedPage Name="FixedPage" Width="5in" Height="7in" Margin="0">
                <Canvas Width="5in" Height="7in" >
                    <Image Name="Image1" Source="Resources/nerds_1.png" Height="155" Canvas.Left="-34" Canvas.Top="345" Width="270" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image Name="Image2" Source="Resources/nerds_2.png" Height="134" Canvas.Left="147" Canvas.Top="93" Width="234" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="97.471"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image Name="Image3" Source="Resources/nerds_3.png" Height="142" Canvas.Left="158" Canvas.Top="350" Width="254" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="82"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image Name="Background" Source="resources/print_template.png" Stretch="Fill" Width="626" Height="434" RenderTransformOrigin="0.5,0.5" Canvas.Left="-123" Canvas.Top="77">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>

                    </Image>
                </Canvas>
            </FixedPage>
        </Canvas>
    </Grid>
</Page>
